<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment2.Views.HolidayDetailView"
             xmlns:viewModels = "clr-namespace:Assignment2.ViewModel"
             x:DataType="viewModels:HolidayDetailsViewModel"
             Title="HolidayDetailView">
    <VerticalStackLayout>
        <Label 
            Text="Holiday Detail" FontSize="28" />

        <Label Text="{Binding HolidaysDetail.nameEn,StringFormat='Name: {0}'}" />
        <Label Text="{Binding HolidaysDetail.date,StringFormat='Date: {0}'}" />
    </VerticalStackLayout>
</ContentPage>
